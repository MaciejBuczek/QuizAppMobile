<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuizAppMobile.RegisterPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center">
            <Entry Placeholder="Username" Margin="20,0,20,10"/>
            <Entry Placeholder="Email" Keyboard="Email" Margin="20,0,20,10"/>
            <Entry Placeholder="Password" IsPassword="True" Margin="20,0,20,10"/>
            <Entry Placeholder="Password" IsPassword="True" Margin="20,0"/>
            <Button Text="Register" Padding="0" Margin="50,20,50,0" TextColor="White" 
                BorderColor="{StaticResource Key=ButtonBorderPrimary}"
                BackgroundColor="{StaticResource Key=ButtonBackgroundPrimary}"
                Clicked="Button_Clicked_Register"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>